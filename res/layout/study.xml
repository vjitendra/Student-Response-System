<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android" 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:background="#FFFFFFFF"
		>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/linearid" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="#FFFFFFFF">

	<TextView android:id="@+id/welcome" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:paddingLeft="120px"
		android:textColor="#000000" android:text="WELCOME" />
	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/info_table" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingLeft="5px"
		android:paddingTop="15px">
		<TableRow>
			<TextView android:id="@+id/quizno" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="10px"
				android:textColor="#000000" android:text="" />
			<TextView android:id="@+id/timer" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="10px"
				android:text="" android:textColor="#000000" android:paddingLeft="40px" />

		</TableRow>
	</TableLayout>
	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/info_table" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingLeft="5px"
		android:paddingTop="10px" android:stretchColumns="1">

		<TableRow>
			<TextView android:id="@+id/queno" android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:textSize="10px"
				android:textColor="#000000" android:text="Question No: " />
			<TextView android:id="@+id/queno1" android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:textSize="10px"
				android:textColor="#000000" android:paddingLeft="0px" />

		</TableRow>
	</TableLayout>

	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/info_table" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingLeft="5px"
		android:paddingTop="10px" android:stretchColumns="1">
		<TableRow>

			<TextView android:id="@+id/que" android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:textSize="10px"
				android:textColor="#000000" android:text="Question: " />

			<TextView android:id="@+id/quena" android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:textSize="10px"
				android:textColor="#000000" android:text="" />

		</TableRow>
	</TableLayout>

	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/info_table" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingLeft="5px"
		android:paddingTop="10px">
		<TableRow>
			<TextView android:id="@+id/option" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="10px"
				android:textColor="#000000" android:text="Answer:" />
			<TextView android:id="@+id/option" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="10px"
				android:textColor="#000000" android:text="" />
			
					</TableRow>
	</TableLayout>
	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/info_table" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingLeft="5px"
		android:paddingTop="10px">
		<TableRow>
			<Button android:id="@+id/imagebutton" android:layout_width="100px"
				android:layout_height="wrap_content" android:layout_marginLeft="40px"
				android:text="previous" />
			<Button android:id="@+id/ImageButton02" android:layout_width="100px"
				android:layout_height="wrap_content" android:layout_marginLeft="40px"
				android:text="Next" />

		</TableRow>
	</TableLayout>
	</LinearLayout>
	</ScrollView>